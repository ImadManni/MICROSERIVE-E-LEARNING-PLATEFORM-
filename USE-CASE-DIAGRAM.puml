    usecase "Create Course" as UC8
    usecase "Update Course" as UC9
    usecase "Delete Course" as UC10
    usecase "Add Course to Firestore" as UC11
    usecase "Query Courses via GraphQL" as UC12
  }
  
  package "Enrollment Management" {
    usecase "Enroll in Course" as UC13
    usecase "View My Enrollments" as UC14
    usecase "Update Progress" as UC15
    usecase "Unenroll from Course" as UC16
  }
  
  package "Content Management" {
    usecase "Manage Categories" as UC17
    usecase "Manage Professors" as UC18
    usecase "Manage Lessons" as UC19
    usecase "Search YouTube Videos" as UC20
  }
  
  package "Analytics & Statistics" {
    usecase "View Course Statistics" as UC21
    usecase "Fetch YouTube Video Stats" as UC22
    usecase "View Analytics Dashboard" as UC23
  }
}

